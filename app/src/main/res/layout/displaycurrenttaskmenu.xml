<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#ff404040"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete Task"
            android:id="@+id/btnCompleteTask"
            android:layout_gravity="left|center_vertical|bottom"
            android:layout_weight=".5"
            android:background="#ff7da3ff"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abandon Task"
            android:id="@+id/btnAbandonTask"
            android:layout_gravity="center_vertical|bottom|right"
            android:layout_weight="0.48"
            android:background="#ff7da3ff"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>